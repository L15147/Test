<!-- Masthead-->
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-white font-weight-bold">Swipe Right</h1>
            </div>
            <div class="col-lg-8 align-self-baseline">
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="DangKy.html">Lập tài khoản</a>
            </div>
        </div>
    </div>
</header>

<section class="page-section" id="services">
    <div class="container">
        <h2 class="text-center mt-0">Quản lí User</h2>
        <hr class="divider my-4"/>
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Chức năng</th>
                    <th>Tài khoản</th>
                    <th>Mật khẩu</th>
                    <th>Họ và tên</th>
                    <th>Địa chỉ</th>
                    <th>SĐT & Email</th>
                    <th>Avatar</th>
                </tr>
                </thead>
                <tbody>
                <form action="/insertUser" enctype="multipart/form-data" method="post">
                    <tr>
                        <td>
                            <button type="submit">Save</button>
                        </td>
                        <td><input name="username" type="text" placeholder="Enter username...." required></td>
                        <td><input name="password" type="password" placeholder="Enter password...." required></td>
                        <td><input name="name" type="text" placeholder="Enter name...." required></td>
                        <td><input name="address" type="text" placeholder="Enter address...." required></td>
                        <td><input name="number_phone" type="text" placeholder="Enter number_phone...." required></td>
                        <td><input name="avatar" type="file"></td>
                    </tr>


                </form>
                <form action="/update" enctype="multipart/form-data" method="post">
                    <tr>
                        <td>
                            <button type="submit">Update</button>
                        </td>
                        <td><input name="username" type="text" placeholder="Enter username...." required></td>
                        <td><input name="password" type="password" placeholder="Enter password...." required></td>
                        <td><input name="name" type="text" placeholder="Enter name...." required></td>
                        <td><input name="address" type="text" placeholder="Enter address...." required></td>
                        <td><input name="number_phone" type="text" placeholder="Enter number_phone...." required></td>
                        <td><input name="avatar" type="file"></td>
                    </tr>


                </form>
                {{#each users}}
                    <tr>
                        <td>
                            <form action="{{this.id}}" enctype="multipart/form-data" method="post">
                                <button type="submit">Delete</button>
                            </form>
                        </td>

                        <td>{{this.username}}</td>
                        <td>{{this.password}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.address}}</td>
                        <td>{{this.number_phone}}</td>
                        <td><img style="width: 50px; height: 50px" src="assets/img/{{this.avatar}}"></td>
                    </tr>


                {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</section>
